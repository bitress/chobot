# ==========================================
# APP CONFIGURATION
# ==========================================
# IS_PRODUCTION: Set to 'true' for production, 'false' for development
IS_PRODUCTION=
# WORKBOOK_NAME: Name of your Google Sheets workbook
WORKBOOK_NAME=
# NOOKIPEDIA_KEY: API key for Nookipedia (optional)
NOOKIPEDIA_KEY=

# ==========================================
# FLASK API CONFIGURATION
# ==========================================
# FLASK_HOST: Host IP for Flask API server (default: 0.0.0.0)
FLASK_HOST=0.0.0.0
# FLASK_PORT: Port for Flask API server (default: 8100)
FLASK_PORT=8100

# ==========================================
# DISCORD CONFIGURATION
# ==========================================
# DISCORD_TOKEN: Your Discord bot token
DISCORD_TOKEN=..
# GUILD_ID: Your Discord server ID
GUILD_ID=
# SUB_CATEGORY_ID: Category ID for sub-islands
SUB_CATEGORY_ID=
# ISLAND_ACCESS_ROLE: Role ID for island access
ISLAND_ACCESS_ROLE=

# --- Channel IDs ---
# CHANNEL_ID: Main logging channel ID
CHANNEL_ID=
# FLIGHT_LISTEN_CHANNEL_ID: Channel to listen for flight logger messages
FLIGHT_LISTEN_CHANNEL_ID=
# FLIGHT_LOG_CHANNEL_ID: Channel to log flight logger actions
FLIGHT_LOG_CHANNEL_ID=
# IGNORE_CHANNEL_ID: Channel ID to ignore
IGNORE_CHANNEL_ID=
# SUB_MOD_CHANNEL_ID: Sub-moderator channel ID
SUB_MOD_CHANNEL_ID=

# ==========================================
# WARNING SYSTEM CONFIGURATION
# ==========================================
# WARN_EXPIRY_DAYS: Number of days before warnings expire (default: 7)
WARN_EXPIRY_DAYS=7
# WARNINGS_DB_NAME: Name of the warnings database file (default: warnings.db)
WARNINGS_DB_NAME=warnings.db

# ==========================================
# TWITCH CONFIGURATION
# ==========================================
TWITCH_TOKEN=
TWITCH_CHANNEL=

# ==========================================
# PATREON CONFIGURATION
# ==========================================
PATREON_TOKEN=
PATREON_CAMPAIGN_ID=

# ==========================================
# LOCAL FILE PATHS
# ==========================================
# Path for Discord Orders
VILLAGERS_DIR=

# Path for Twitch Orders
TWITCH_VILLAGERS_DIR=

# ==========================================
# ISLAND BOT ROLE (SYSBOT)
# ==========================================
# Role shared by all 18 island SysBots (named "Chobot <island name>").
# Used by !islandstatus to locate each island's bot by name.
ISLAND_BOT_ROLE_ID=788749941949464577